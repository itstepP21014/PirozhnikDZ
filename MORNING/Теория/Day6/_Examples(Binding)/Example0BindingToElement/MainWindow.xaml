<Window x:Class="Exampl2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>

        <Slider x:Name="sliderFontSize" Margin="10" Minimum="15" Maximum="72" 
                TickFrequency="1" TickPlacement="TopLeft"/>

        <TextBox x:Name="tbText" Text="Пример текста" 
                FontSize="{Binding Value, ElementName=sliderFontSize}" />

    </StackPanel>
</Window>
