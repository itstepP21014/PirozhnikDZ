<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="From&#xD;&#xA;" HorizontalAlignment="Left" Margin="49,38,0,0" VerticalAlignment="Top" Width="77" Click="Button_Click" Height="22"/>
        <Button Content="To" HorizontalAlignment="Left" Margin="178,40,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Go" HorizontalAlignment="Left" Margin="299,40,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <ProgressBar HorizontalAlignment="Left" Height="19" VerticalAlignment="Top" Width="298" Margin="121,254,0,0" RenderTransformOrigin="0.5,0.5" Name="progressBar" ValueChanged="ProgressBar_ValueChanged">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Button Content="Stop&#xD;&#xA;" HorizontalAlignment="Left" Margin="49,109,0,0" VerticalAlignment="Top" Width="77" Height="29" Click="Button_Click_3"/>

    </Grid>
</Window>
