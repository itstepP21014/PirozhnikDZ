<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="225.237" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ProgressBar Minimum="0" Maximum="100" x:Name="pb" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Height="50"></ProgressBar>
        <Button x:Name="btnStart" Content="Что" Grid.Column="0" Grid.Row="1" Height="50" Click="btnStart_Click"/>
        <Button x:Name="btnDestination" Content="Куда" Grid.Column="1" Grid.Row="1" Height="50" Click="btnDestination_Click"/>
        <Button x:Name="btnOk" Content="Ok" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Height="50" Click="btnOk_Click"/>

    </Grid>
</Window>
