<Window x:Class="kursovoi_proekt_net_framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0"  Grid.Row="0"  Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal">
            <Label VerticalAlignment="Center">Выберете целевую папку:</Label>
            <TextBox x:Name="tb_path" Width="400" Height="20" Margin="10"/>
            <Button x:Name="btn_choose_folder" Width="100" Height="20" Click="btn_choose_folder_Click">Открыть</Button>
        </StackPanel>
        <Button x:Name="btn_start" Grid.Column="0"  Grid.Row="1"  Grid.ColumnSpan="2" Width="200" Click="btn_start_Click">Поиск</Button>
        <ListBox  x:Name="lb_info" Grid.Column="0"  Grid.Row="2"  Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua" Width="700" Height="400" Margin="10"></ListBox>
    </Grid>
</Window>
