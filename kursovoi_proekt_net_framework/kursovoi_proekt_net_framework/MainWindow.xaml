<Window x:Class="kursovoi_proekt_net_framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0"  Grid.Row="0"  Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal">
            <Label VerticalAlignment="Center">Выберете целевую папку:</Label>
            <TextBox x:Name="tb_path" Width="200" Height="20" Margin="10"/>
            <Button x:Name="btn_choose_folder" Width="100" Height="20" Click="btn_choose_folder_Click">Открыть</Button>
        </StackPanel> 
    </Grid>
</Window>
